<h1>収支一覧</h1>
<table>
<thead>
  <tr>
    <th>日付</th>
    
    <th>科目</th>
    <th>金額</th>
    <th>摘要</th>
    <th colspan="3"></th>
  </tr>
</thead>

<% @day.each do |day| %>
<tr>
  <td><%= day.date %></td>
  
  <td><%= day.sub.name %></td>
  <td><%= day.value %></td>
  <td><%= day.discription %></td>
  <td><%= link_to 'Show', day %></td>
  <td><%= link_to 'Edit', edit_day_path(day) %></td>
  <td><%= link_to 'Destroy', day, method: :delete,
                                   data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</table>

